<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".monitor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMonitor"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="@string/imgDescMonitor"
                app:srcCompat="@drawable/monitor" />

            <TextView
                android:id="@+id/txtMonitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/monitorName"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/txtPrice2"
                android:textColor="#DD0000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMonitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnText" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>